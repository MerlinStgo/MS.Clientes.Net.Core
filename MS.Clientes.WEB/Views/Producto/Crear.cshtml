@model MS.Commerce.Entidad.Producto
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="width:100%">
    <div class="col-6">
        <h2 class="text-primary">Lista Productos</h2>
    </div>
    <div class="col-4 text-right">
        <button type="button" class="btn btn-info form-control" data-toggle="modal" data-target="#myModalProducto">
            Nuevo Producto
        </button>
    </div>
</div>

<div class="p-4 border rounded bg-light">
    <table class="table table-bordered table-responsive-xl" id="tdDataProd" style="width:95%">
        <thead class="thead-dark">
            <tr class="table-success">
                <th>Nombre</th>
                <th>Fec. Venc.</th>
                <th>Precio Uni.</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<div class="modal fade" id="myModalProducto" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <form method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h2 class="modal-title text-primary text-center">Nuevo Producto</h2>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="padding-left:15%; padding-right:15%; padding-bottom:15%">
                        <div class="row p-3 boder:0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <input type="hidden" asp-for="IdProducto" id="IdProducto"/>

                        <div class="form-row" style="padding-top: 14px">
                            <div class="form-group col-md-6">
                                <label>Nombres</label>
                                <input asp-for="Nombre" class="form-control" id="NombreProducto" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Fec. Venc.</label>
                                <input asp-for="FechaVencimiento.Value" class="form-control" id="FechaVencimiento" type="date" />
                                <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Imagen</label>
                            <input asp-for="Imagen" class="form-control-sm" id="ImagenProducto" type="file" />
                            <span asp-validation-for="Imagen" class="text-danger"></span>
                        </div>
                        <div class="form-row" style="padding-top: 15px">
                            <div class="form-group col-md-6">
                                <label>Precio</label>
                                <input asp-for="PrecioUnitario" class="form-control" id="PrecioUnitario"  type="number"/>
                                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Estado</label>
                                <select asp-for="Estado" class="form-control" id="EstadoProducto">
                                    <option value="true">Activo</option>
                                    <option value="false">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success">Crear Producto</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/producto.js"></script>
}